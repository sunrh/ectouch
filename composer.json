{
    "name": "ectouch/ectouch",
    "description": "ECTouch E-Commerce Platform for PHP.",
    "keywords": ["ectouch", "b2c", "o2o", "shop", "mall", "wechat"],
    "homepage": "https://www.ectouch.cn/",
    "license": "GPL",
    "type": "project",
    "authors": [
        {
            "name": "carson",
            "email": "wanganlin@ecmoban.com"
        }
    ],
    "support": {
        "issues": "https://github.com/ectouch/ectouch/issues?state=open",
        "forum": "http://www.ectouch.cn/forum/",
        "wiki": "http://www.ectouch.cn/wiki/",
        "source": "https://github.com/ectouch/ectouch"
    },
    "minimum-stability": "stable",
    "require": {
        "php": ">=5.6.4",
        "aliyuncs/oss-sdk-php": "^2.2",
        "bizley/migration": "^2.2",
        "jellybool/flysystem-upyun": "^1.0",
        "jellybool/translug": "^2.0",
        "mobiledetect/mobiledetectlib": "^2.8",
        "overtrue/easy-sms": "^0.0.9",
        "overtrue/pinyin": "^3.0",
        "overtrue/socialite": "^1.1",
        "overtrue/wechat": "^3.3",
        "phpoffice/phpexcel": "^1.8",
        "sentry/sentry": "^1.7",
        "workerman/phpsocket.io": "^1.1",
        "yiisoft/yii2": "~2.0.5",
        "yiisoft/yii2-apidoc": "~2.1.0",
        "yiisoft/yii2-bootstrap": "~2.0.0",
        "yiisoft/yii2-httpclient": "~2.0.0",
        "yiisoft/yii2-swiftmailer": "~2.0.0"
    },
    "require-dev": {
        "yiisoft/yii2-debug": "~2.0.0",
        "yiisoft/yii2-gii": "~2.0.0",
        "yiisoft/yii2-faker": "~2.0.0",

        "codeception/base": "^2.2.3",
        "codeception/verify": "~0.3.1",
        "codeception/specify": "~0.4.3"
    },
    "autoload": {
        "psr-4": {
            "app\\": "app/"
        },
        "files": [
            "config/constant.php",
            "app/support/helpers.php"
        ]
    },
    "config": {
        "sort-packages": true,
        "optimize-autoloader": true,
        "process-timeout": 1800,
        "fxp-asset":{
            "installer-paths": {
                "npm-asset-library": "vendor/npm",
                "bower-asset-library": "vendor/bower"
            }
        }
    },
    "scripts": {
        "post-create-project-cmd": [
            "yii\\composer\\Installer::postCreateProject"
        ]
    },
    "extra": {
        "yii\\composer\\Installer::postCreateProject": {
            "setPermission": [
                {
                    "storage": "0777",
                    "public/assets": "0777",
                    "artisan": "0755"
                }
            ],
            "generateCookieValidationKey": [
                "config/config.php"
            ]
        }
    }
}
